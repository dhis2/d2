{
  "name": "d2",
  "version": "31.8.3",
  "description": "Javascript library for DHIS2",
  "main": "d2.js",
  "scripts": {
    "build:dev": "webpack --config webpack.config.dev.js --mode development",
    "build:prod": "webpack --config webpack.config.prod.js --mode production",
    "build": "npm run clean && npm run transpile && npm run build:dev && npm run build:prod",
    "clean": "rimraf build",
    "commit:check": "d2-style commit check",
    "coverage": "npm test -- --coverage",
    "documentation": "jsdoc -c jsdoc.json --readme ./README.md -u ./tutorials",
    "js:check": "d2-style js check --all",
    "js:format": "d2-style js apply",
    "lint:fix": "eslint src --fix",
    "lint": "eslint src",
    "prebuild": "npm run lint && npm run test",
    "test:watch": "npm run test -- --watch",
    "test": "TZ=UTC jest",
    "transpile": "babel src --out-dir build --source-maps --ignore '/**/__tests__/*','/**/__mocks__/*','/**/__fixtures__/*'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dhis2/d2.git"
  },
  "keywords": [
    "dhis2",
    "api",
    "library"
  ],
  "author": "Mark Polak",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/dhis2/d2/issues"
  },
  "homepage": "https://github.com/dhis2/d2",
  "greenkeeper": {
    "ignore": [
      "eslint",
      "eslint-plugin-import"
    ]
  },
  "husky": {
    "hooks": {
        "commit-msg": "npm run commit:check",
        "pre-commit": "npm run js:format"
    }
  },
  "dependencies": {
    "isomorphic-fetch": "^2.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/plugin-proposal-class-properties": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@dhis2/cli-style": "^2.2.1",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "docdash": "^1.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.14.0",
    "form-data": "^2.3.3",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "jsdoc": "^3.5.5",
    "lodash": "^4.17.11",
    "rimraf": "^2.6.3",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "engines": {
    "npm": ">=3.5.1",
    "node": ">=5.1.1"
  },
  "nyc": {
    "sourceMap": false,
    "instrument": false
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__fixtures__/"
    ],
    "testPathIgnorePatterns": [
      ".*\\.e2e\\.jsx?$"
    ]
  }
}
